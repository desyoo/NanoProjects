<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My NanoDegree Apps!"
        android:paddingBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/textView" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:background="#03A9F4"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:onClick="displayToast"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Super Duo"
        android:background="#03A9F4"
        android:id="@+id/button2"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:onClick="displayToast"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:background="#03A9F4"
        android:id="@+id/button3"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:onClick="displayToast"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:background="#03A9F4"
        android:id="@+id/button4"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:onClick="displayToast"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Capstone"
        android:background="#03A9F4"
        android:layout_marginTop="10dp"
        android:id="@+id/button5"
        android:layout_gravity="center_horizontal"
        android:onClick="displayToast"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#9CCC65"
        android:layout_marginTop="10dp"
        android:text="my own app"
        android:id="@+id/button6"
        android:layout_gravity="center_horizontal"
        android:onClick="displayToast"/>
</LinearLayout>
